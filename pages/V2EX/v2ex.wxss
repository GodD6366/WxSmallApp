.msg{
	width: 100%;
	height: 100px;
	margin-bottom: 2px;
	box-shadow: 1px 1px 0 0;
}
.header{
	width: 100px;
	height: 100px;
	float: left;
	text-align: center;
}
.header image{
	margin-top: 20px;
	width: 60px;
	height: 60px;
	border-radius: 100px;
}

.topic{
	position:relative;
	width: 200px;
	height: 100px;
	float: right;
}
.title{
	margin-top: 20px;
}
.username{
	position: absolute;
	left: 0px;
	top:75px;
	color: gray;
	font-size: 10px;
}
.chat{
	width: 20px;
	height: 20px;
	position: absolute;
	left: 170px;
	top:70px;
	color: white;
	display: inline-block;
	background: gray;
	border-radius: 10px;
	text-align: center;
	line-height: 20px;
}